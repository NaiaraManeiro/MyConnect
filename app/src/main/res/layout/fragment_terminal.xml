<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal|vertical"
    tools:context=".fragment.TerminalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="565dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingTop="30dp"
            android:paddingRight="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userHost"
                    style="@style/Texto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/terminalPath"
                    style="@style/Texto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    style="@style/Texto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="$" />

                <EditText
                    android:id="@+id/cmdInput"
                    style="@style/EditText"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:hint="@string/command_no_dots"
                    android:includeFontPadding="false"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:theme="@style/EditTextColor" />

                <Button
                    android:id="@+id/runCmdButton"
                    style="@style/Buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/run"
                    android:textSize="10sp"
                    app:strokeWidth="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                style="@style/Texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/output" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScroll"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/resultArea"
                        style="@style/Texto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbars="horizontal|vertical"
                        android:scrollHorizontally="true"
                        android:verticalScrollbarPosition="right" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>